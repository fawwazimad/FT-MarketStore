@model IEnumerable<FT_MarketStore.Models.Userr>

@{
    ViewData["Title"] = "Index";

    Layout = "~/Views/Shared/_ AdminLayout.cshtml";
        var roleId = ViewBag.RoleId;
	var userId = ViewBag.userId; 
}

<h1 style="position:relative;left:50px; color:white">Customers</h1>
<br />
<p>
    <a asp-action="Create" style="position:relative;left:50px;" class="btn btn-primary">Create New</a>
</p>
<table style="position:relative;left:50px;" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserBalance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserBalance)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-primary">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
