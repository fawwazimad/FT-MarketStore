@model FT_MarketStore.Models.Category

@{
    ViewData["Title"] = "Create";
     Layout = "~/Views/Shared/_ AdminLayout.cshtml";
         var roleId = ViewBag.RoleId;
	var userId = ViewBag.userId; 
}

<h2 style="position:relative;left:200px; color:white">Create Category</h2>

<hr/>
<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" style="border:solid grey 1px"/>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" style="border:solid grey 1px"/>
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary btn-block text-uppercase">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
