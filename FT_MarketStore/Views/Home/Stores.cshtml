@model IEnumerable<FT_MarketStore.Models.Store>
@{
    ViewData["Title"] = "Stores"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
	var roleId = ViewBag.RoleId;
	var userId = ViewBag.userId; 
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

</head>
<body>
  	<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1> Stores </h1>
							</div>
						</div>
						<div class="col-lg-7"> </div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

		

		<div class="untree_co-section product-section before-footer-section">
		    <div class="container"> 
				<div class="row">
					<div class="col-md-6 mb-4">
						<form class="form-inline md-form mr-auto ">
							<input class="form-control mr-sm-2" type="text" id="searchStores" placeholder="Search" aria-label="Search"> 
							</form>
							</div>
							</div>
							<div class="row">
								@foreach (var item in Model) {
			<div class="col-12 col-md-4 col-lg-3 mb-5 mb-md-0" name="@item.StoreName" id="sto">
				<a class="product-item" href="https://localhost:5001/Home/Products/@item.StoreId">
                <img src=@Url.Content("~/Images/" + item.StoreImage) asp-append-version ="true" class="img-fluid product-thumbnail" />
				<h3 class="product-title" id="Store">@Html.DisplayFor(modelItem => item.StoreName)</h3>	
				</a>
			</div>
 }
		</div>
	</div>
</div> 

<script> 
	$('#searchStores').on('input', function () { 
		var ss = $('#searchStores').val(); 
		if (ss == "") { 
			$("div[id='sto']").css('display', 'block');  
		} else {
			$("h3[id='Store']").each(function (i, item) {
				if (item.innerHTML.toLowerCase().includes(ss.toLowerCase())) {
					$(`div[name="${item.innerHTML}"]`).css('display', 'block'); 
				} else { 
					$(`div[name="${item.innerHTML}"]`).css('display', 'none'); 
				} 
			}); 
		} 
	}) 

</script>
 
</body>
</html>


	
