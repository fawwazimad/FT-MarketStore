@model FT_MarketStore.Models.Userr
@{
    ViewData["Title"] = "Sign Up";  
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">   
    		    <!-- Font Icon -->
    <link rel="stylesheet" href="~/assists3/fonts/material-icon/css/material-design-iconic-font.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/assists3/css/style.css">
</head>
<body>
    <div class="main"> 
            <!-- Sign up form -->
            <section class="signup">
                <div class="container">
                    <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
                      <form asp-action="SignUp" enctype="multipart/form-data" method="POST" class="register-form" id="register-form">
                            <div class="form-group">
                                <label asp-for="Fname"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" name="Fname" id="name" placeholder="First Name" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Lname"><i class="zmdi zmdi-email"></i></label>
                                <input type="text" name="Lname" id="Lname" placeholder="Last Name" />
                            </div>

                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-lock"></i></label>
                                <input type="email" name="email" id="email" placeholder="Email" required />
                            </div>
                            <div class="form-group">
                                <label for="password"><i class="zmdi zmdi-lock-outline"></i></label>
                                <input type="password" name="password" id="password" placeholder="Password" />
                            </div>
                            <div class="form-group">
                                <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" />
                                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
                            </div>
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="SignUp" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/assists3/images/logoo.png" alt="sing up image"></figure>
                        <a href="https://localhost:5001/Home/SignIn" class="signup-image-link">I am already member</a>
                    </div>
                </div>
            </div>
        </section> 
        </div>
    </body>
    </html>
