@model IEnumerable<FT_MarketStore.Models.ProductCart>

@{
    ViewData["Title"] = "Shop"; 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
</head>
<body>
    	<!-- Start Hero Section -->
			<div class="hero">
				<div class="container">
					<div class="row justify-content-between">
						<div class="col-lg-5">
							<div class="intro-excerpt">
								<h1>Cart</h1>
							</div>
						</div>
						<div class="col-lg-7">
						</div>
					</div>
				</div>
			</div>
		<!-- End Hero Section -->

    @{  decimal? total = 0; }

		<div class="untree_co-section before-footer-section">
            <div class="container">
              <div class="row mb-5">
                <form class="col-md-12" method="post">
                  <div class="site-blocks-table">
                    <table class="table">
                      <thead>
                        <tr>
                          <th class="product-thumbnail">Image</th>
                          <th class="product-name">Product</th>
                          <th class="product-price">Price</th>  
                          <th class="product-remove">Remove</th>
                        </tr>
                      </thead>
                      <tbody> 
                          @foreach (var item in Model) {
                           total +=item.Product.ProductPrice;
                          <tr> 
                          <td class="product-thumbnail">
                            <img src=@Url.Content("~/Images/" + @item.Product.ImagePath) alt="Image" class="img-fluid">
                          </td>
                          <td class="product-name">
                            <h2 class="h5 text-black">@item.Product.ProductName</h2>
                          </td>
                          <td>$@item.Product.ProductPrice</td>
                          <td><a class="btn btn-black btn-sm">X</a></td>
                        </tr>

                        }

                      </tbody>
                    </table>
                  </div>
                </form>
              </div>
        
              <div class="row">
                <div class="col-md-6">
                  <div class="row mb-5">
                    <div class="col-md-6 mb-3 mb-md-0"> 
                    </div>
                    <div class="col-md-6">
                      <a href="https://localhost:5001/" class="btn btn-outline-black btn-sm btn-block">Continue Shopping</a>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                    </div>
                    <div class="col-md-8 mb-3 mb-md-0"> 
                    </div>
                    <div class="col-md-4"> 
                    </div>
                  </div>
                </div>
                <div class="col-md-6 pl-5">
                  <div class="row justify-content-end">
                    <div class="col-md-7">
                      <div class="row">
                        <div class="col-md-12 text-right border-bottom mb-5">
                          <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                        </div>
                      </div>
                      <div class="row mb-3">
                        <div class="col-md-6">
                          <span class="text-black">Subtotal</span>
                        </div>
                        <div class="col-md-6 text-right">
                          <strong class="text-black"> $@total  </strong>
                        </div>
                      </div>
                      <div class="row mb-5">
                        <div class="col-md-6">
                          <span class="text-black">Total</span>
                        </div>
                        <div class="col-md-6 text-right">
                          <strong class="text-black">$@total</strong>
                        </div>
                      </div>
        
                      <div class="row">
                        <div class="col-md-12">
                          <a class="btn btn-black btn-lg py-3 btn-block"  asp-action="Checkout" asp-controller="Carts" >Proceed To Checkout</a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
		

</body>
</html>

                        
<script>
var ids = [];
$('.itemProduct').on('click', function() {
    var x = $(this).attr("id");
	$(`img[id=${x}]`).attr('src', 'https://upload.wikimedia.org/wikipedia/commons/2/27/White_check.svg'); 
     $.ajax({
                url: `/Carts/addtolist?id=${x}`,
                method: "GET",
                success: function (response) {},
                error: function (error) {
                    alert(error.message);
                    console.log(error);
                }
            });

});
function goToCart() {
    var data = {
		productsId:ids
	}
	 $.ajax({
                url: "/Carts/Cart",
                method: "POST",
                data: JSON.stringify(data),
                contentType: "application/json",
                success: function (response) {
                    window.location.href("");
                },
                error: function (error) {
                    alert(error.message);
                    console.log(error);
                }
            });
}

</script>

	
